.container
	.row
		.span12
			include quizHeader
			#questionTitle #{title}
			ul#answers.unstyled
				- var alphaToIdMap = ['A', 'B', 'C', 'D'];
				each answer, id in answers
					- var className = answerId == id ? 'answered btnBlue' : 'btnOrange';
					- var answerLetter = alphaToIdMap[id];
					li.answer(class=className, data-id="#{id}")
						.answerLetter(class=className) #{answerLetter}
						.answerText #{answer}
