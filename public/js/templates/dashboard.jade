#dashboard.container
	.row
		.span12
			h1 Did you catch that?

	.row
		section.span6

			ul#users
				each user in users
					- var className = user.name ? 'authed' : 'anonymous';
					li(class=className, id='user-' + user.session)
						if user.name
							// img(src='http://www.gravatar.com/avatar/#{user.name}?default=monsterid&amp;forcedefault=1')
							| #{user.name}
						else
							i.icon-user &#160;

			ul#activities

		section.span6#question-stats

			ul.questions
				- var answerIndex = ['A', 'B', 'C', 'D', 'E', 'F'];
				each question, question_id in quiz.questions
					li.question(id='question-' + question_id)
						figure
							figcaption= question.title
							ul.answers
								each answer, answer_id in question.answers
									- var className = 'answer answer' + answer_id;
									li(class=className, style="width: 0%", id='answer-' + question_id + '-' + answer_id)= answerIndex[answer_id]
								li.answer.noAnswer(style="width: 100%", id='answer-' + question_id) ?