@import 'nib'
@import 'vendor/bootstrap.css'
@import 'vendor/bootstrap-responsive.css'
@import 'vendor/font-awesome.css'
@import 'app-responsive.css'

body
	background #fff url(/img/bg.png)
	font-family Cabin, Arial, sans-serif


figure
	margin 0

.btnOrange
	background linear-gradient(top, rgb(210, 96, 0), rgb(179, 52, 42))
	color #fff
	border-radius 9px
	&.hasBorders
		border 3px solid #c15400

.btnBlue
	background linear-gradient(top, rgb(35, 131, 225), rgb(51, 99, 154))
	color #fff
	border-radius 9px
	&.hasBorders
		border 3px solid #1f6fbf

#dashboard
	figure
		table
			width 100%

	ul#users
		overflow auto
		margin 9px 0
		li
			float left
			margin 0 3px
			padding 0 9px
			line-height 24px
			font-weight 700
			text-align center
			border-radius 50px
			background-color #eee
			font-size 14px
			overflow ellipsis

			&.authed
				background-color #666
				color #fff


	ul#activities, ul#users
		margin 0
		list-style none

		li
			margin-bottom 9px

	ul.questions,
	ul.answers
		margin 0
		list-style none

	figcaption
		font-size 18px
		margin-top 9px

	ul.answers
		display table
		width 100%
		table-layout auto
		margin 9px 0
		color #fff


		li.answer
			display table-cell
			overflow hidden

			&.answer0
				background #c00
			&.answer1
				background #0c0
			&.answer2
				background #00c
			&.answer3
				background #cc0
			&.noAnswer
				background #ccc
